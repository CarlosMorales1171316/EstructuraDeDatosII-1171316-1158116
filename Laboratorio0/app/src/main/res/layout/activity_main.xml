<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:hint="Buscar Canci贸n de la biblioteca"
        android:inputType="text"
        android:textAllCaps="false"
        android:textStyle="italic" />

    <Button
        android:id="@+id/botonBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_dark"
        android:text="Buscar Canci贸n"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@android:color/white"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Biblioteca de Canciones"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/ListView1"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:background="@android:color/black"
        android:divider="@android:color/white"
        android:dividerHeight="8px" />
    <EditText
        android:id="@+id/txtNombreCancion"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:hint="Agregar Nombre Canci贸n"
        android:inputType="text"
        android:textAllCaps="false"
        android:textStyle="italic" />

    <Button
        android:id="@+id/botonAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar canci贸n al playlist"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Orden:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/botonAscendente"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Ascendente"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonDescendente"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Descendente"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Playlist - Usuario"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/ListView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/black"
        android:divider="@android:color/white"
        android:dividerHeight="8px" />

 </LinearLayout>