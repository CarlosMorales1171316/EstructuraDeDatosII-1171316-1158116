<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SerieUno">

    <TextView
        android:text="Escribe tu mensaje a comprimir"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/Texto_Comprimir"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Escoja la ruta para la extension .huff"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/RutaDescargas"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="/Download"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:textSize="10dp" />
        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent" />
        <CheckBox
            android:id="@+id/RutaDocuments"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="/Pictures"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:textSize="10dp" />
        <TextView
            android:layout_width="8dp"
            android:layout_height="match_parent" />
        <CheckBox
            android:id="@+id/RutaDCIM"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="/DCIM"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:textSize="10dp" />
    </LinearLayout>
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <Button
        android:id="@+id/Boton_OpenFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Comprimir texto" />

    <Button
        android:id="@+id/Boton_OpenFile2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Comprimir Archivo txt" />

    <Button
        android:id="@+id/Boton_Descomprimir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Descomprimir archivo huff" />

    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/Compresion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Boton_OpenFile"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light"
        android:padding="10dp"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <TextView
        android:id="@+id/Compresion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Boton_OpenFile"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:textColor="@android:color/background_dark" />
    android:textColor="@android:color/background_dark" />
    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp" />
    <TextView
        android:id="@+id/TextView_OpenFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Boton_OpenFile"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:padding="10dp"
        android:textColor="@android:color/background_dark" />

</LinearLayout>